<h1>Listing Projects</h1>

<% if can? :read, :all %>
  <p><%= link_to "Create New Project", new_project_path, class: "btn btn-md btn-success" %></p>
<% end %>


<hr>
<ul>
<% @projects.each do |project| %>
<li>
  <h4><a href="<%= project_path(project.id) %>" ><%= project.name %></a></h4>
  <p><%= project.description %><p>
  </p>
  </p>
 </li>
<% end %>
<ul>
<div id="projects">
  <h2 id="month"><%= @date.strftime("%B %Y") %></h2>
  <%= calendar @date do |date| %>
	  <%= date.day %>
	  <% if @projects_by_date[date] %>
	    <ul>
	        <% @projects_by_date[date].each do |project| %>
	        <li><%= link_to project.name, project %></li>
	        <% end %>
	    </ul>
    <% end %>  
  <% end %>
</div>

<%= paginate @projects %>