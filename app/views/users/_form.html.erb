<%= simple_form_for @user do |f| %>
  <fieldset>
  <legend>Background Information</legend>
  <div class="row">
    <!--Basic Info-->
    <div class="col-md-5">
    <%= f.input :first_name %>
    </div>
    <div class="col-md-5">
    <%= f.input :last_name %>
    </div>
    <div class="col-md-2">
    <%= f.input :age, collection: 18..100 %>
    </div>
  </div>
  <div class="row">
  <!--Education and background-->
    <div class="col-md-3">
      <%= f.input :education, collection: @education_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :school, label:"Name of University/College" %>
    </div>
    <div class="col-md-3">
      <%= f.input :expertise, label:"Field of study or expertise" %>
    </div>
    <div class="col-md-3">
      <%= f.input :certifications, label:"Certifications related to field" %>
    </div>
  </div>
  <div class="row">
    <!--Outreach Information-->
    <div class="col-md-6">
      <%= f.input :phone, label: "Phone Number" %>
    </div>
    <div class="col-md-6">
      <%= f.input :zip, label: "Zip Code" %>
    </div>
  </div>
  <div class="row">
  <!--Languages-->
      <div class="col-lg-12">
        <p>If you have proficiency in other languages than English, please indicate below:</p>
      </div>
      <div class="col-md-4">
        <%= f.input :lang1, label:"Second Language:" %>
      </div>
      <div class="col-md-8">
        <%= f.input :lang1_fluency, collection: @levels_of_proficiency, label:"Fluency:" %>
      </div>
      <div class="col-md-4">
        <%= f.input :lang2, label:"Third Language:" %>
      </div>
      <div class="col-md-8">
        <%= f.input :lang2_fluency, collection: @levels_of_proficiency, label:"Fluency:" %>
      </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :time_commitment, label: "Please indicate how much time you are interested in volunteering:", collection: @time_commitment_choices %>
    </div>

    <!--availability-->
    <p>Please describe your general availability on a weekly basis.</p>

    <div class="col-md-3">
      <%= f.input :sunday_availability, label: "Sunday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :monday_availability, label: "Monday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :tuesday_availability, label: "Tuesday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :wednesday_availability, label: "Wednesday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :thursday_availability, label: "Thursday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :friday_availability, label: "Friday:", collection: @availability_choices %>
    </div>
    <div class="col-md-3">
      <%= f.input :saturday_availability, label: "Saturday:", collection: @availability_choices %>
    </div>
    <div class="col-md-12">
      <%= f.input :availability_comments, label: "Anything else we should know about your availability?" %>
    </div>
  </div>
  <!-- other details -->
  <div class="row">
    <div class="col-md-12">
    <%= f.input :description, label: "About:", as: :text, hint: "Please tell us very briefly a little about yourself and why you want to volunteer for Engineers without Borders.", :input_html => {:style => 'width: 100%', :rows => 4, class: 'response-project'} %>
    </div>
  </div>
  <%= f.button :submit, "Update Background", class: "btn btn-md btn-success"%>
  </fieldset>
  <p></p>
  <fieldset>
  <legend>Account Information</legend>
  <%= f.input :email, disabled: true %>
  <%= link_to "Change Email or Password", edit_user_registration_path, class: "btn btn-md btn-warning" %>
  </fieldset>
<% end %>
<p></p>